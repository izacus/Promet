<resources>

    <!-- Base application theme. -->
    <style name="PrometTheme" parent="Base.Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/theme_background</item>
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color_dark</item>
        <item name="colorAccent">@color/theme_color_highlight</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="preferenceTheme">@style/PrometTheme.Preferences</item>
    </style>

    <style name="PrometTheme.Preferences" parent="PreferenceThemeOverlay.v14" />

    <style name="PrometTheme.ActionBar" parent="PrometTheme">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="PrometTheme.Toolbar.Subtitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">8sp</item>
    </style>

</resources>
